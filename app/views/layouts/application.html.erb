<!DOCTYPE html>
<html>
  <head>
    <title><%= ENV['META_TITLE'] %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="<%= ENV['META_DESCRIPTION'] %>">
    <link href="https://fonts.googleapis.com/css?family=Rubik:300,400,500,600%7CIBM+Plex+Sans:300,400,500,600,700" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'mailbox', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/fathom_track' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'application/favicon' %>
        <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= ENV['META_TITLE'] %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= ENV['META_IMAGE'] %>" />
    <meta property="og:description" content="<%= ENV['META_DESCRIPTION'] %>" />
    <meta property="og:site_name" content="<%= ENV['META_TITLE'] %>" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= ENV['META_TITLE'] %>">
    <meta name="twitter:description" content="<%= ENV['META_DESCRIPTION'] %>">
    <meta name="twitter:image:src" content="<%= ENV['META_IMAGE'] %>">
  </head>

  <body class="dark-layout">
    <main id="content" role="main">
      <div class="container">
        <div class="row mb-2">
          <div class="col text-center mt-2">
            <%= link_to mailbox_path do %>
              <%= image_tag("roasted.svg", alt: t('app_name'), title: t('app_name'), class: 'fit')%>
            <% end %>
          </div>
        </div>
        <%= yield %>
      </div>
    </main>
    <footer class="footer footer-static footer-dark">
      <div class="container">
        <div class="row mb-2">
          <div class="col-12">
            <p class="clearfix mb-0">
              <div class="float-left">
                <h6 class="mb-0"><%= t('app_name') %></h6>
                <span><%= link_to 'API', rswag_ui_path, class: 'ml-0' %> | <%= link_to 'Changelog', changelog_index_path, class: 'ml-0' %></span>
              </div>
              <span class="float-right d-sm-inline-block d-none">Developed by<a class="text-uppercase" href="https://github.com/andrepcg" target="_blank">andré perdigão</a></span>
            </p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
