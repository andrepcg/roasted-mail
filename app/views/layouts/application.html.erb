<!DOCTYPE html>
<html>
  <head>
    <title><%= ENV['META_TITLE'] %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="<%= ENV['META_DESCRIPTION'] %>">
    <link href="https://fonts.googleapis.com/css?family=Rubik:300,400,500,600%7CIBM+Plex+Sans:300,400,500,600,700" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'mailbox', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'phones', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/fathom_track' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'inbox' %>
    <%= javascript_pack_tag 'phones' %>
    <%= render 'application/favicon' %>

    <meta name="controller_name" content="<%= controller_name %>">
    <meta name="action_name" content="<%= action_name %>">

        <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= ENV['META_TITLE'] %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= ENV['META_IMAGE'] %>" />
    <meta property="og:description" content="<%= ENV['META_DESCRIPTION'] %>" />
    <meta property="og:site_name" content="<%= ENV['META_TITLE'] %>" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= ENV['META_TITLE'] %>">
    <meta name="twitter:description" content="<%= ENV['META_DESCRIPTION'] %>">
    <meta name="twitter:image:src" content="<%= ENV['META_IMAGE'] %>">
  </head>

  <body class="dark-layout">
    <main id="content" role="main">
      <div class="container">
        <div class="row mb-2">
          <div class="col text-center mt-2">
            <%= link_to mailbox_path, data: { turbolinks: false } do %>
              <%= image_tag("roasted.svg", alt: t('app_name'), title: t('app_name'), class: 'fit')%>
            <% end %>
          </div>
        </div>
        <%= yield %>
      </div>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
